@model GoalArena.Models.Match
@{
    ViewData["Title"] = "حجز تذكرة";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-ticket-alt"></i> حجز تذكرة
                    </h3>
                </div>
                <div class="card-body">
                    <h4 class="text-center mb-4">مباراة: @Model.HomeTeam vs @Model.AwayTeam</h4>
                    <p class="text-center text-muted">
                        <i class="fas fa-calendar-alt"></i> @Model.MatchDate.ToString("dddd, dd MMM yyyy - HH:mm") <br />
                        <i class="fas fa-map-marker-alt"></i> @Model.Stadium
                    </p>

                    <form asp-controller="Ticket" asp-action="BookTicketConfirmed" method="post">
                        <input type="hidden" name="matchId" value="@Model.MatchId" />

                        <div class="mb-3">
                            <label class="form-label">عدد التذاكر</label>
                            <input type="number" name="quantity" class="form-control" min="1" max="10" value="1" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">السعر للتذكرة</label>
                            <input type="text" class="form-control" value="@Model.TicketPrice.ToString("100") EGP" readonly />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-credit-card"></i> الدفع الآن
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> رجوع
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
    }

    .form-label {
        font-weight: 600;
    }
</style>
