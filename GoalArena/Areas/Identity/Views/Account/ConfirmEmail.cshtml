@{
    ViewData["Title"] = "Account Activated";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body text-center p-5" style="background-color: #f9f9f9;">
                    <div class="mb-4 text-success">
                        <i class="bi bi-check-circle-fill" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Your account has been successfully activated!</h3>
                    <p class="text-muted mb-4">You can now log in to your account and enjoy our services.</p>
                    <a href="/Identity/Account/Login" class="btn btn-primary rounded-pill px-4 py-2">Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
