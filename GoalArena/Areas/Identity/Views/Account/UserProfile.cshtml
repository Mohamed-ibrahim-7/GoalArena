@model GoalArena.ViewModels.UserProfileVM

<section class="vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-5">

                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body text-center p-5">

                        <!-- صورة البروفايل -->
                        <div class="mb-4">
                            <img src="@(!string.IsNullOrEmpty(Model.ProfilePicture) ? Model.ProfilePicture : "https://via.placeholder.com/150")"
                                 alt="Profile Picture"
                                 class="rounded-circle img-fluid shadow-sm border"
                                 style="width: 120px; height: 120px; object-fit: cover;" />
                        </div>

                        <!-- اسم المستخدم -->
                        <h3 class="mb-2 fw-bold">@Model.UserName</h3>

                        <!-- الإيميل -->
                        <p class="text-muted mb-4">@Model.Email</p>

                        <!-- زر تعديل البروفايل -->
                       

                        <!-- زر تغيير الباسورد -->
                       
                        <div class="card-body p-5">
                            <h3 class="text-center fw-bold mb-4">Change Password</h3>

                            <form asp-action="ChangePassword">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <input type="hidden" name="UserId" value="@Model.UserId" />

                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter new password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label"></label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm new password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="d-grid mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg rounded-pill">Update Password</button>
                                </div>
                            </form>

                            <div class="text-center mt-3">
                                <a asp-action="Index" class="text-decoration-none">Back to List</a>
                            </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
