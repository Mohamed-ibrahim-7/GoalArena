@using GoalArena.Utility
@model IEnumerable<GoalArena.Models.MatchEvent>

@{
    ViewData["Title"] = "MatchEvents";
  
}

<h2 class="mb-4">إدارة أحداث المباريات</h2>

<a class="btn btn-success mb-3" asp-action="Create">إضافة حدث جديد</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>المباراة</th>
            <th>الفريق</th>
            <th>نوع الحدث</th>
            <th>الدقيقة</th>
            <th>الوصف</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Match?.HomeTeam?.Name - @item.Match?.AwayTeam?.Name</td>
                @* <td>@item..Name</td> *@
                <td>@item.EventType</td>
                <td>@item.Minute</td>
                <td>@item.Description</td>
                @if (User.IsInRole(SD.SuperAdmin) || User.IsInRole(SD.Admin))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">تعديل</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                    </td>
                   
                } </tr>
                }
    </tbody>
</table>
