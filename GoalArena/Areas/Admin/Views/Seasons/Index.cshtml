@using GoalArena.Utility
@model IEnumerable<GoalArena.Models.Season>

@{
    ViewData["Title"] = "Seasons";
  @*  Layout = "~/Views/Shared/_Layout.cshtml";*@
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Season List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Season
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Tournament</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.StartDate.ToShortDateString()</td>
                    <td>@obj.EndDate.ToShortDateString()</td>
                    <td>@(obj.Tournament != null ? obj.Tournament.Name : "N/A")</td>
                    <td>@obj.Status</td>
                    
                        @if (User.IsInRole(SD.SuperAdmin) || User.IsInRole(SD.Admin))
                        {<td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@obj.SeasonId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@obj.SeasonId" class="btn btn-info mx-2">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@obj.SeasonId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>

                            </div>
						</td>
					}
                    
                </tr>
            }
        </tbody>
    </table>
</div>
