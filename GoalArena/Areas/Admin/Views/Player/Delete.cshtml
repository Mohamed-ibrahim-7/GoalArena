@model GoalArena.Models.Player

@{
    ViewData["Title"] = "Delete Player";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <h2 class="text-danger">Delete Player</h2>
    <hr />
    <h3>Are you sure you want to delete this player?</h3>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Position)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Position)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Age)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Age)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NationalTeam)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NationalTeam)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TeamId)</dt>
        <dd class="col-sm-10">@Model.TeamId</dd>

        <dt class="col-sm-2">Team</dt>
        <dd class="col-sm-10">@((Model.Team != null) ? Model.Team.Name : "N/A")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Goals)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Goals)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Assists)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Assists)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MatchesPlayed)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.MatchesPlayed)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ImageUrl)</dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-height:200px;" />
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PlayerId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
