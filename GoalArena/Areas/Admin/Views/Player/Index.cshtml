@using GoalArena.Utility
@model IEnumerable<GoalArena.Models.Player>

@{
    ViewData["Title"] = "Players";
    int maxPagesToShow = 5;
    int startPage = Math.Max(1, ViewBag.PageNumber - (maxPagesToShow / 2));
    int endPage = Math.Min(ViewBag.TotalPages, startPage + maxPagesToShow - 1);

    if ((endPage - startPage + 1) < maxPagesToShow)
    {
        startPage = Math.Max(1, endPage - maxPagesToShow + 1);
    }
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Player List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Player" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Player
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Position</th>
                <th>Age</th>
                <th>National Team</th>
                <th>Team</th>
                <th>Goals</th>
                <th>Assists</th>
                <th>Matches</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(player.ImageUrl))
                        {
                            <img src="@player.ImageUrl" alt="@player.Name" width="50" height="50" style="object-fit:cover;" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@player.Name</td>
                    <td>@player.Position</td>
                    <td>@player.Age</td>
                    <td>@player.NationalTeam</td>
                    <td>@(player.Team != null ? player.Team.Name : "N/A")</td>
                    <td>@player.Goals</td>
                    <td>@player.Assists</td>
                    <td>@player.MatchesPlayed</td>
                    
                        @if (User.IsInRole(SD.SuperAdmin) || User.IsInRole(SD.Admin))
                        {<td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-area="Admin" asp-controller="Player" asp-action="Edit" asp-route-id="@player.PlayerId" class="btn btn-primary mx-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-area="Admin" asp-controller="Player" asp-action="Details" asp-route-id="@player.PlayerId" class="btn btn-info mx-1">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-area="Admin" asp-controller="Player" asp-action="Delete" asp-route-id="@player.PlayerId" class="btn btn-danger mx-1">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
						</td>
					}
                    
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            @if (ViewBag.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-area="Admin"
                       asp-controller="Player"
                       asp-action="Index"
                       asp-route-pageNumber="1"
                       asp-route-pageSize="@ViewBag.PageSize">
                        First
                    </a>
                </li>

                <li class="page-item">
                    <a class="page-link"
                       asp-area="Admin"
                       asp-controller="Player"
                       asp-action="Index"
                       asp-route-pageNumber="@(ViewBag.PageNumber - 1)"
                       asp-route-pageSize="@ViewBag.PageSize">
                        Previous
                    </a>
                </li>
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                    <a class="page-link"
                       asp-area="Admin"
                       asp-controller="Player"
                       asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@ViewBag.PageSize">
                        @i
                    </a>
                </li>
            }

            @if (ViewBag.PageNumber < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-area="Admin"
                       asp-controller="Player"
                       asp-action="Index"
                       asp-route-pageNumber="@(ViewBag.PageNumber + 1)"
                       asp-route-pageSize="@ViewBag.PageSize">
                        Next
                    </a>
                </li>

                <li class="page-item">
                    <a class="page-link"
                       asp-area="Admin"
                       asp-controller="Player"
                       asp-action="Index"
                       asp-route-pageNumber="@ViewBag.TotalPages"
                       asp-route-pageSize="@ViewBag.PageSize">
                        Last
                    </a>
                </li>
            }

        </ul>
    </nav>
</div>
