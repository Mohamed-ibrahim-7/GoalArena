@model GoalArena.Models.Player

@{
    ViewData["Title"] = "Edit Player";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <h2 class="text-primary">Edit Player</h2>
    <hr />
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="PlayerId" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Position" class="form-label"></label>
            <input asp-for="Position" class="form-control" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Age" class="form-label"></label>
            <input asp-for="Age" class="form-control" type="number" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NationalTeam" class="form-label"></label>
            <input asp-for="NationalTeam" class="form-control" />
            <span asp-validation-for="NationalTeam" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TeamId" class="form-label"></label>
            <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamList"></select>
            <span asp-validation-for="TeamId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Goals" class="form-label"></label>
            <input asp-for="Goals" class="form-control" type="number" />
            <span asp-validation-for="Goals" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Assists" class="form-label"></label>
            <input asp-for="Assists" class="form-control" type="number" />
            <span asp-validation-for="Assists" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MatchesPlayed" class="form-label"></label>
            <input asp-for="MatchesPlayed" class="form-control" type="number" />
            <span asp-validation-for="MatchesPlayed" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Upload New Image</label>
            <input type="file" name="LogoFile" class="form-control" accept="image/*" />
        </div>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mt-2">
                <p>Current Image:</p>
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-height:150px;" />
                <input type="hidden" asp-for="ImageUrl" /> 
            </div>
        }

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
