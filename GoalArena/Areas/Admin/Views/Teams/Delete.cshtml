@model GoalArena.Models.Team

@{
    ViewData["Title"] = "Delete Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <h2 class="text-danger">Delete Team</h2>
    <hr />
    <h3>Are you sure you want to delete this team?</h3>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Coach)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Coach)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SeasonId)</dt>
        <dd class="col-sm-10">@Model.SeasonId</dd>
        <dt class="col-sm-2">Season</dt>
        <dd class="col-sm-10">@((Model.Season != null) ? Model.Season.Name : "N/A")</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LogoUrl)</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <img src="@Model.LogoUrl" style="width:100px; height:100px;" />
            }
            else
            {
                <span>No Logo</span>
            }
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
