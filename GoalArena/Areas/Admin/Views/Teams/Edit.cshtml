@model GoalArena.Models.Team

@{
    ViewData["Title"] = "Edit Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <h2 class="text-primary">Edit Team</h2>
    <hr />
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Coach" class="form-label"></label>
            <input asp-for="Coach" class="form-control" />
            <span asp-validation-for="Coach" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SeasonId" class="form-label"></label>
            <select asp-for="SeasonId" class="form-control" asp-items="ViewBag.SeasonList"></select>
            <span asp-validation-for="SeasonId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Current Logo</label><br />
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <img src="@Model.LogoUrl" style="width:100px; height:100px;" />
            }
            else
            {
                <span>No Logo</span>
            }
        </div>
        <div class="mb-3">
            <label class="form-label">Upload New Logo</label>
            <input type="file" name="LogoFile" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
