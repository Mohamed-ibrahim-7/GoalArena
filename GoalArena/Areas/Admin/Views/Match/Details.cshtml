@model GoalArena.Models.Match

@{
    ViewData["Title"] = "Match Details";
}

<h2>Match Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Match Date</dt>
            <dd class="col-sm-9">@Model.MatchDate.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Stadium</dt>
            <dd class="col-sm-9">@Model.Stadium</dd>

            <dt class="col-sm-3">Home Team</dt>
            <dd class="col-sm-9">@Model.HomeTeam?.Name</dd>

            <dt class="col-sm-3">Away Team</dt>
            <dd class="col-sm-9">@Model.AwayTeam?.Name</dd>

            <dt class="col-sm-3">Season</dt>
            <dd class="col-sm-9">@Model.Season?.Name</dd>

            <dt class="col-sm-3">Tournament</dt>
            <dd class="col-sm-9">@Model.Tournament?.Name</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.MatchId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
