@model GoalArena.Models.Match

@{
    ViewData["Title"] = "Match Details";
}

<h2>Match Details</h2>

<!-- Existing sections for match details -->
<!-- Match Events Section -->
<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Match Events</h5>
                <a asp-controller="MatchEvent" asp-action="Create" asp-route-matchId="@Model.MatchId" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Add Event
                </a>
            </div>
            <div class="card-body">
                @if (Model.MatchEvents != null && Model.MatchEvents.Any())
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Type</th>
                                <th>Player</th>
                                <th>Team</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evt in Model.MatchEvents.OrderBy(e => e.Minute))
                            {
                                <tr>
                                    <td>@evt.Minute'@(evt.ExtraMinute.HasValue ? "+" + evt.ExtraMinute.Value : "")</td>
                                    <td>
                                        @evt.EventType
                                        @if (evt.EventType == EventType.Goal && evt.GoalType.HasValue)
                                        {
                                            <span class="text-muted">(@evt.GoalType)</span>
                                        }
                                    </td>
                                    <td>@evt.Player?.Name</td>
                                    <td>@evt.Team?.Name</td>
                                    <td>@evt.Description</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-controller="MatchEvent" asp-action="Edit" asp-route-id="@evt.Id" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-controller="MatchEvent" asp-action="Delete" asp-route-id="@evt.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="mt-2">
                        <a asp-controller="MatchEvent" asp-action="Index" asp-route-matchId="@Model.MatchId" class="btn btn-outline-primary btn-sm">
                            View All Events
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        No events recorded for this match yet.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Ticket Booking Section -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card border-success shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">🎟 Book Tickets</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Ticket" asp-action="Book" method="post">
                    <input type="hidden" name="MatchId" value="@Model.MatchId" />
                    <div class="mb-3">
                        <label class="form-label">Ticket Price</label>
                        <input type="text" class="form-control" value="@Model.TicketPrice.ToString("C")" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="quantity" class="form-label">Number of Tickets</label>
                        <input type="number" id="quantity" name="Quantity" class="form-control" value="1" min="1" max="10" />
                    </div>
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-ticket-alt"></i> Book Now
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MatchId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
