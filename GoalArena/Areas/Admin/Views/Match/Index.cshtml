@model IEnumerable<GoalArena.Models.Match>

@{
    ViewData["Title"] = "Matches";
}

<h2>Matches</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create New Match</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Match Date</th>
            <th>Stadium</th>
            <th>Home Team</th>
            <th>Away Team</th>
            <th>Season</th>
            <th>Tournament</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model)
        {
            <tr>
                <td>@match.MatchDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@match.Stadium</td>
                <td>@match.HomeTeam?.Name</td>
                <td>@match.AwayTeam?.Name</td>
                <td>@match.Season?.Name</td>
                <td>@match.Tournament?.Name</td>
                <td>@match.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@match.MatchId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@match.MatchId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@match.MatchId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
