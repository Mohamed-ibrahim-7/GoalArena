@model GoalArena.Models.Match

@{
    ViewData["Title"] = "Edit Match";
}

<h2>Edit Match</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MatchId" />
    <div class="mb-3">
        <label asp-for="MatchDate" class="form-label"></label>
        <input asp-for="MatchDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="MatchDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Stadium" class="form-label"></label>
        <input asp-for="Stadium" class="form-control" />
        <span asp-validation-for="Stadium" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="HomeTeamId" class="form-label">Home Team</label>
        <select asp-for="HomeTeamId" class="form-select" asp-items="ViewBag.HomeTeams"></select>
        <span asp-validation-for="HomeTeamId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="AwayTeamId" class="form-label">Away Team</label>
        <select asp-for="AwayTeamId" class="form-select" asp-items="ViewBag.AwayTeams"></select>
        <span asp-validation-for="AwayTeamId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="SeasonId" class="form-label">Season</label>
        <select asp-for="SeasonId" class="form-select" asp-items="ViewBag.Seasons"></select>
        <span asp-validation-for="SeasonId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="TournamentId" class="form-label">Tournament</label>
        <select asp-for="TournamentId" class="form-select" asp-items="ViewBag.Tournaments"></select>
        <span asp-validation-for="TournamentId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            @foreach (var status in Enum.GetValues(typeof(GoalArena.Models.MatchStatus)))
            {
                <option value="@status">@status</option>
            }
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
