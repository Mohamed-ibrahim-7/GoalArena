@model GoalArena.Models.MatchEvent

@{
    ViewData["Title"] = "Add Match Event";
    var match = ViewBag.Match as Match;
}

<h2>Add Match Event</h2>
<h4 class="text-muted mb-4">@match.HomeTeam?.Name vs @match.AwayTeam?.Name</h4>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="MatchId" />

            <div class="card mb-4">
                <div class="card-header">
                    <h5>Event Details</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="EventType" class="form-label">Event Type</label>
                        <select asp-for="EventType" class="form-select" asp-items="ViewBag.EventTypes" id="eventTypeSelect"></select>
                        <span asp-validation-for="EventType" class="text-danger"></span>
                    </div>

                    <div class="mb-3 goal-type-section" style="display: none;">
                        <label asp-for="GoalType" class="form-label">Goal Type</label>
                        <select asp-for="GoalType" class="form-select" asp-items="ViewBag.GoalTypes"></select>
                        <span asp-validation-for="GoalType" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TeamId" class="form-label">Team</label>
                        <select asp-for="TeamId" class="form-select" asp-items="ViewBag.Teams"></select>
                        <span asp-validation-for="TeamId" class="text-danger"></span>
                    </div>

                    <div class="mb-3 player-section">
                        <label asp-for="PlayerId" class="form-label">Player</label>
                        <select asp-for="PlayerId" class="form-select" asp-items="ViewBag.Players">
                            <option value="">-- Select Player --</option>
                        </select>
                        <span asp-validation-for="PlayerId" class="text-danger"></span>
                    </div>

                    <div class="mb-3 related-player-section" style="display: none;">
                        <label asp-for="RelatedPlayerId" class="form-label">Related Player (Assist/Substituted)</label>
                        <select asp-for="RelatedPlayerId" class="form-select" asp-items="ViewBag.Players">
                            <option value="">-- Select Player --</option>
                        </select>
                        <span asp-validation-for="RelatedPlayerId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Minute" class="form-label">Minute</label>
                                <input asp-for="Minute" type="number" min="0" max="120" class="form-control" />
                                <span asp-validation-for="Minute" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ExtraMinute" class="form-label">Extra Minute</label>
                                <input asp-for="ExtraMinute" type="number" min="0" max="15" class="form-control" />
                                <span asp-validation-for="ExtraMinute" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-controller="Match" asp-action="Details" asp-route-id="@Model.MatchId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Function to toggle sections based on event type
            function toggleSections() {
                var eventType = $('#eventTypeSelect').val();

                // Reset all sections
                $('.goal-type-section').hide();
                $('.related-player-section').hide();

                // Show relevant sections based on event type
                if (eventType == '@((int)EventType.Goal)') {
                    $('.goal-type-section').show();
                    $('.related-player-section').show(); // For assists
                }
                else if (eventType == '@((int)EventType.Assist)' ||
                         eventType == '@((int)EventType.Substitution)') {
                    $('.related-player-section').show();
                }
            }

            // Initial toggle
            toggleSections();

            // Listen for changes to event type
            $('#eventTypeSelect').change(toggleSections);
        });
    </script>
}
