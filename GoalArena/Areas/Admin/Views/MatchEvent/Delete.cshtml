@model GoalArena.Models.MatchEvent

@{
    ViewData["Title"] = "Delete Match Event";
}

<h2>Delete Match Event</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this event?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5>Event Details</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Match</dt>
            <dd class="col-sm-9">@Model.Match?.HomeTeam?.Name vs @Model.Match?.AwayTeam?.Name</dd>

            <dt class="col-sm-3">Event Type</dt>
            <dd class="col-sm-9">
                @Model.EventType
                @if (Model.EventType == EventType.Goal && Model.GoalType.HasValue)
                {
                    <span class="text-muted">(@Model.GoalType)</span>
                }
            </dd>

            <dt class="col-sm-3">Team</dt>
            <dd class="col-sm-9">@Model.Team?.Name</dd>

            <dt class="col-sm-3">Player</dt>
            <dd class="col-sm-9">@Model.Player?.Name</dd>

            <dt class="col-sm-3">Time</dt>
            <dd class="col-sm-9">@Model.Minute'@(Model.ExtraMinute.HasValue ? "+" + Model.ExtraMinute.Value : "")</dd>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            }
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Match" asp-action="Details" asp-route-id="@Model.MatchId" class="btn btn-secondary">Cancel</a>
</form>
