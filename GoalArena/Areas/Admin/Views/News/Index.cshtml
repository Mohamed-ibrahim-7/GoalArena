@model IEnumerable<GoalArena.Models.News>

@{
    ViewData["Title"] = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">News List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> &nbsp; Create News
            </a>
            <a asp-action="Edit" class="btn btn-primary me-2">
                <i class="bi bi-pencil"></i> &nbsp; Edit News
            </a>
            <a asp-action="Delete" class="btn btn-primary">
                <i class="bi bi-trash"></i> &nbsp; Delete News
            </a>
        </div>
    </div>

    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>PublishedDate</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Content</td>
                    <td>@obj.PublishedDate.ToShortDateString()</td>
                    
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                           
                            <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
