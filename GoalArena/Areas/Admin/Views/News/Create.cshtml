@using GoalArena.ViewModels
@model MatchWithPlayerWithTeamVM

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-12">
            <h2 class="display-6">Create New News</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label">Title</label>
                    <input type="text" class="form-control" id="name" name="News.Title" value="@Model.News!.Title">
                    <span class="text-danger" asp-validation-for="News.Title"></span>
                </div>
                <div class="mb-3">
                    <label for="Content" class="form-label">Content</label>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a Content here" id="Content" style="height: 100px" name="Product.Content">@Model.News!.Content</textarea>
                        <label for="Content">You Content Here...</label>
                    </div>
                    <span class="text-danger" asp-validation-for="News.Content"></span>
                </div>
                <div class="mb-3">
                    <label for="imageUrl" class="form-label">ImageUrl</label>
                    <input type="file" class="form-control" id="imageUrl" name="imageUrl" accept="image/*" onchange="previewImage(event)">
                    <img id="imagePreview" src="#" alt="Image Preview" class="img-thumbnail mt-2" style="display: none; max-height: 200px;" />
                    <span class="text-danger" asp-validation-for="News.ImageUrl"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="News.PublishedDate" class="form-label"></label>
                    <input asp-for="News.PublishedDate" class="form-control" type="datetime-local" />
                    <span class="text-danger" asp-validation-for="News.PublishedDate"></span>
                </div>
                <div class="mb-3">
                    <label for="playerId" class="form-label">playerId</label>
                    <select class="form-select" asp-for="News.playerId" asp-items="Model.Players"></select>
                    <span class="text-danger" asp-validation-for="News.playerId"></span>
                </div>
                <div class="mb-3">
                    <label for="TeamId" class="form-label">TeamId</label>
                    <select class="form-select" asp-for="News.playerId" asp-items="Model.Teams"></select>
                    <span class="text-danger" asp-validation-for="News.TeamId"></span>
                </div>
                <div class="mb-3">
                    <label for="MatchId" class="form-label">MatchId</label>
                    <select class="form-select" asp-for="News.TeamId" asp-items="Model.Matches"></select>
                    <span class="text-danger" asp-validation-for="News.MatchId"></span>
                </div>
                
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById('imagePreview');

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>