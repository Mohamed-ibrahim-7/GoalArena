@model GoalArena.Models.Tournament

@{
    ViewData["Title"] = "Edit Tournament";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">Edit Tournament</h2>
        </div>
    </div>
    <hr />

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="TournamentId" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Current Logo</label><br />
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <img src="@Model.LogoUrl" style="width:100px; height:100px;" />
            }
            else
            {
                <span>No Logo</span>
            }
        </div>

        <div class="mb-3">
            <label class="form-label">Upload New Logo</label>
            <input type="file" name="LogoFile" class="form-control" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
