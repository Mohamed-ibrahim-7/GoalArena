@model GoalArena.Models.Tournament

@{
    ViewData["Title"] = "Delete Tournament";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-danger">Delete Tournament</h2>
        </div>
    </div>
    <hr />

    <h3>Are you sure you want to delete this tournament?</h3>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Country)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LogoUrl)
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.LogoUrl))
                {
                    <img src="@Model.LogoUrl" style="width:100px; height:100px;" />
                }
                else
                {
                    <span>No Logo</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="TournamentId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
